<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_start_video_clip"
        android:layout_width="@dimen/entry_textview_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#33ff0000"
        android:gravity="center"
        android:padding="8dp"
        android:text="Video Cropping"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_local_video_edit"
        android:layout_width="@dimen/entry_textview_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_video_clip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#33ff0000"
        android:gravity="center"
        android:padding="8dp"
        android:text="Video editing (special effects, filters)"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_camera_preview"
        android:layout_width="@dimen/entry_textview_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_local_video_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#33ff0000"
        android:gravity="center"
        android:padding="8dp"
        android:text="Camera preview"
        android:textSize="16sp"/>

</RelativeLayout>